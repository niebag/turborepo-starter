{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "React Library",
    "extends": "./tsconfig.base.json",
    "compilerOptions": {
        /* Language compilation options */
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "moduleDetection": "force",
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
    },
}